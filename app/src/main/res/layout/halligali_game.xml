<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- 1번부터(맨 왼쪽 위) 시계방향으로 1~4  -->
    <ImageButton
        android:id="@+id/bell_button_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/halligalli_bell_shape"
        android:scaleType="fitCenter"
        android:src="@drawable/halligalli_bell"
        />

    <ImageButton
        android:id="@+id/bell_button_2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/halligalli_bell_shape"
        android:scaleType="fitCenter"
        android:src="@drawable/halligalli_bell" />

    <!-- 카드 놓는 구역. height는 426dp -->
    <GridLayout
        android:id="@+id/card_ground"
        android:foregroundGravity="center"
        android:layout_below="@id/bell_button_1"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/card_loc_1"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/halligalli_card_shape"
            android:src="@drawable/halligalli_cat_card_1" />
        <ImageView
            android:id="@+id/card_loc_2"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="@drawable/halligalli_card_shape"
            android:src="@drawable/halligalli_cat_card_2" />
        <ImageView
            android:id="@+id/card_loc_3"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/halligalli_cat_card_3"
            android:background="@drawable/halligalli_card_shape"
 />
        <ImageView
            android:id="@+id/card_loc_4"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:src="@drawable/halligalli_cat_card_4"
            android:background="@drawable/halligalli_card_shape" />
    </GridLayout>


    <ImageButton
        android:id="@+id/bell_button_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/halligalli_bell_shape"
        android:scaleType="fitCenter"
        android:src="@drawable/halligalli_bell" />

    <ImageButton
        android:id="@+id/bell_button_4"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/halligalli_bell_shape"
        android:scaleType="fitCenter"
        android:src="@drawable/halligalli_bell" />
</RelativeLayout>

