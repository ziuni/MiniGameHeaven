<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/halligalli_screen"
    >

    <ImageButton
        android:id="@+id/start_btn"
        android:layout_marginTop="200dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/halligalli_screen_start_btn"
        />
    <ImageButton
        android:id="@+id/rule_btn"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/halligalli_screen_rule_btn"
        />
    <ImageButton
        android:id="@+id/end_btn"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/halligalli_screen_end_btn"
        />

</LinearLayout>